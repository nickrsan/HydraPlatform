<template_definition>
    <template_name>Test XML Template</template_name>
    <resources>
        <resource>
            <type>NODE</type>
            <name>Reservoir</name>
            <alias>Reservoir</alias>
            <layout>
                <![CDATA[
                    <resource_layout>
                        <layout>
                            <name>color</name>
                            <value>red</value>
                        </layout>
                        <layout>
                            <name>shapefile</name>
                            <value>blah.shp</value>
                        </layout>
                    </resource_layout>]]>
            </layout>
            <attribute>
                <name>Min Capacity</name>
                <dimension>Volume</dimension>
                <is_var>Y</is_var>
            </attribute>
            <attribute>
                <name>Max Capacity</name>
                <dimension>Volume</dimension>
                <default>
                    <value>100</value>
                    <unit>cubic metre</unit>
                 </default>
            </attribute>
            <attribute>
                <name>Throughput</name>
                <dimension>Volumetric flow rate</dimension>
                <default>
                    <value>100</value>
                    <unit>cubic metres per second</unit>
                 </default>
            </attribute>
        </resource>
        <resource>
            <type>NODE</type>
            <name>Desalination Plant</name>
            <alias>Desalination Plant</alias>
            <attribute>
                <name>Min Capacity</name>
                <dimension>Volume</dimension>
                <default>
                    <value>0</value>
                    <unit>cubic centimeter</unit>
                 </default>
            </attribute>
            <attribute>
                <name>Inflow</name>
                <dimension>Volumetric flow rate</dimension>
                <default>
                    <value>100</value>
                    <unit>cubic metres per second</unit>
                 </default>
            </attribute>
            <attribute>
                <name>Energy Price</name>
                <dimension>Energy Cost</dimension>
                <default>
                    <value>1.25</value>
                    <unit>USDollars per kilojoule</unit>
                 </default>
            </attribute>
        </resource>
    </resources>
</template_definition>
