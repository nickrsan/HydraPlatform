<?xml version="1.0"?>
<template_definition>
    <template_name>Template for the karate model</template_name>
	<layout>	    
        <item>
            <name>grouping</name>
            <value>			    
			    <name>EBSD Model v2</name>
				<description>EBSD Model with network attributes</description>
				<categories>
				    <category>
						<name>Nodes</name>
						<description>Nodes</description>
						<displayname>Nodes</displayname>
						<groups>
							<group>
								<name>karate</name>
								<description>Karate</description>
								<displayname>Karate</displayname>
								<image>images\karate_16.png</image>
							</group>
						</groups>
				    </category>	
					<category>
						<name>Links</name>
						<description>Links</description>
						<displayname>Links</displayname>
						<groups>
							<group>
								<name>connection</name>
								<description>Social Connection</description>
								<displayname>Connection</displayname>
								<image>images\BlackSolidLine16.png</image>
							</group>
						</groups>				
				    </category>	
				</categories>
            </value>
        </item>
    </layout>
    <resources>
        <resource>
            <type>NETWORK</type>
            <name>network</name>
        </resource>
        <resource>
            <type>NODE</type>
            <name>karate</name>
			<layout>
				<item>
					<name>image</name>
					<value>images\karate_16.png</value>
				</item>
				<item>
					<name>symbol</name>
					<value>square</value>
				</item>
				<item>
					<name>colour</name>
					<value>purple</value>
				</item>
				<item>
					<name>group</name>
					<value>karate</value>
				</item>
            </layout>
            <attribute>
                <name>degree</name>
                <dimension>dimensionless</dimension>
                <is_var>N</is_var>
                <data_type>scalar</data_type>
            </attribute>
        </resource>
        <resource>
            <type>LINK</type>
            <name>connection</name>
			<layout>
				<item>
					<name>image</name>
					<value>images\red_line.png</value>
				</item>
				<item>
					<name>symbol</name>
					<value>solid</value>
				</item>
				<item>
					<name>colour</name>
					<value>black</value>
				</item>
				<item>
					<name>line_weight</name>
					<value>1</value>
				</item>
				<item>
					<name>group</name>
					<value>Links</value>
				</item>
            </layout>
            <attribute>
                <name>weight</name>
                <dimension>dimensionless</dimension>
                <is_var>N</is_var>
                <data_type>scalar</data_type>
            </attribute>
        </resource>
    </resources>
</template_definition>
